<div class="border-form-div">

  <h3>Edit Team log in & contact information</h3>

  <%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :email, "Email (username)" %><br>
      <%= f.text_field :email, :readonly => true %>
    </div>

    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :league %><br>
      <%= f.collection_select :league, ['BAC', 'BVAL', 'CMC', 'DFAL', 'DVAL', 'EBAL', 'HDNL', 'MCAL', 'MVAL', 'NBL', 'SCL', 'WACC'], :to_s, :to_s, :include_blank => true %>
    </div><br>

    <div class="field">
      <%= f.label :cell, "Phone #" %><br>
      <%= f.text_field :cell %>
    </div>

    <div class="field">
      <%= f.label :password %><br>
      <%= f.password_field :password %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br>
      <%= f.password_field :password_confirmation %>
    </div>


    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>