<div class="border-form-div">

  <h2>Create New User</h2>

  <%= form_for User.new, url: create_user_path  do |f| %>
    <% if user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :email %><br>
      <%= f.text_field :email %>
    </div>

    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>


      <div class="field">
        <%= f.label :school %><br>
        <%= f.text_field :school %>
      </div>

      <div class="field">
        <%= f.label :abbreviation %><br>
        <%= f.text_field :abbreviation %>
      </div>

      <div class="field">
        <%= f.label :section %><br>
        <%= f.collection_select :section, @list, :to_s, :to_s, include_blank: true %>
      </div><br>



    <div class="field">
      <%= f.label :cell, "Phone #" %><br>
      <%= f.text_field :cell %>
    </div>

    <div class="field">
      <%= f.label :password %><br>
      <%= f.password_field :password %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br>
      <%= f.password_field :password_confirmation %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>