<div class="team-name">

  <h1>Wrestlers </h1> (<%= @wrestlers.count %>)

  <p>
    Download:
      <%= link_to "CSV", wrestlers_path(format: "csv") %> |
      <%= link_to "Excel", wrestlers_path(format: "xls") %>

  </p>

</div>
<div class="container" ng-view="">
  <div class="row">
    <div class="panel ">
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-bordered table-hover" id="wrestlers_table">
            <thead>
              <tr>
                <th></th>
                <th>Wt</th>
                <th>League Place</th>
                <th>League</th>
                <th>School</th>
                <th>First</th>
                <th>Last</th>
                <th>YR</th>
                <th>W</th>
                <th>L</th>

              </tr>
            </thead>
            <tbody>
            <script>
              (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
              (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
              m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
              })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

              ga('create', 'UA-59923417-1', 'auto');
              ga('send', 'pageview');

            </script>
              <% @wrestlers.each do |wrestler, user| %>
                <% if @weight == wrestler.weight %>
                 <%= render partial: '/wrestlers/table_row', locals: { wrestler: wrestler, user: user} %>
                 <% else  %>
                  <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                  </tr>
                 <% @weight = wrestler.weight %>
                <%= render partial: '/wrestlers/table_row', locals: { wrestler: wrestler, user: user} %>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
